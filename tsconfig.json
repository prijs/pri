{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "jsx": "react",
    "target": "es6",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "scripthost",
      "es2018.promise"
    ],
    "outDir": "built",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "built"
  ]
}